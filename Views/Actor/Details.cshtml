@model Actor
@{
    ViewData["Title"] = Model.FullName;
    Layout = "_FNLayout";
}

<div class="container-fluid py-5  text-white">
    <div class="container">
        <div class="row">
            <!-- صورة الممثل (العمود الأيسر) -->
            <div class="col-lg-4 mb-4 mb-lg-0">
                <div class="position-relative overflow-hidden rounded-3 shadow-lg actor-profile-image">
                    <img src="@Model.ProfilePictureUrl" class="img-fluid" alt="@Model.FullName" />
                    <div class="overlay-gradient"></div>
                </div>
            </div>

            <!-- معلومات الممثل (العمود الأيمن) -->
            <div class="col-lg-8">
                <div class=" p-4 rounded-3 shadow-lg h-100">
                    <!-- اسم الممثل والشعار -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="fw-bold mb-0">@Model.FullName</h2>
                        <span class="badge bg-danger fw-normal">ممثل</span>
                    </div>

                    <!-- السيرة الذاتية -->
                    <div class="bio mb-4">
                        <h5 class="border-bottom border-light pb-2 mb-3">السيرة الذاتية</h5>
                        <p class="lead">@Model.Bio</p>
                    </div>

                    
                </div>
            </div>
            <div class="back-to-index">
                <a class="btn btn-primary" asp-action="Index">القائمه الرائسيه</a>
            </div>
        </div>
    </div>
</div>

