@model AuthViewModel
@{
    ViewData["Title"] = "Auth";
    Layout = "_SecLayout";
}

<div>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
</div>

<!-- Auth Section -->
<div class="auth-center">
<div class="hslhx-auth-container">
    <div class="hslhx-auth-image">
        <div class="hslhx-auth-image-content">
            <h2>أهلاً بك في CineFlex</h2>
            <p>المنصة الرائدة لمشاهدة الأفلام والمسلسلات بجودة عالية. انضم إلينا اليوم واستمتع بتجربة مشاهدة فريدة.</p>
        </div>
    </div>
    <div class="hslhx-auth-forms">
        <div class="hslhx-forms-container">
            <div class="hslhx-tabs">
                <div class="hslhx-tab active" onclick="switchTab('login')">تسجيل الدخول</div>
                <div class="hslhx-tab" onclick="switchTab('register')">حساب جديد</div>
            </div>
                <!-- Login Form -->
                @{
                    await Html.RenderPartialAsync("Login", Model.Login);
                }

            <!-- Register Form -->
                @{
                    await Html.RenderPartialAsync("Register", Model.Register);
                }
        </div>
    </div>
</div>
</div>
<script>
    function switchTab(tab) {
        // Hide all tab contents
        document.querySelectorAll('.hslhx-tab-content').forEach(content => {
            content.classList.remove('active');
        });

        // Remove active class from all tabs
        document.querySelectorAll('.hslhx-tab').forEach(tabElement => {
            tabElement.classList.remove('active');
        });

        // Show selected tab content
        document.getElementById(tab + '-form').classList.add('active');

        // Add active class to selected tab
        document.querySelector('.hslhx-tab:nth-child(' + (tab === 'login' ? '1' : '2') + ')').classList.add('active');
    }

    function togglePassword(inputId) {
        const passwordInput = document.getElementById(inputId);
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
    }
</script>