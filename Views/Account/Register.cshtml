@model RegisterVM
<div id="register-form" class="hslhx-tab-content">
    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="hslhx-form-group">
            <label asp-for="FullName">الاسم الكامل</label>
            <input asp-for="FullName" class="hslhx-form-control">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="hslhx-form-group">
            <label asp-for="EmailAdress">البريد الإلكتروني</label>
            <input asp-for="EmailAdress" class="hslhx-form-control">
            <span asp-validation-for="EmailAdress" class="text-danger"></span>
        </div>
        <div class="hslhx-form-group">
            <label for="Register.Password">كلمة المرور</label>
            <div class="hslhx-password-field">
                <input asp-for="Password" id="register-password" class="hslhx-form-control">
                <button type="button" class="hslhx-toggle-password" onclick="togglePassword('register-password')">👁️</button>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="hslhx-form-group">
            <label asp-for="ConfirmPassword">تأكيد كلمة المرور</label>
            <div class="hslhx-password-field">
                <input asp-for="ConfirmPassword" id="register-confirm-password" class="hslhx-form-control">
                <button type="button" class="hslhx-toggle-password" onclick="togglePassword('register-confirm-password')">👁️</button>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="hslhx-form-check">
            <input asp-for="RememberMe" class="hslhx-form-check-input">
            <label asp-for="RememberMe"><a href="#" style="color: var(--primary-color);">تذكرني</a></label>
        </div>
        <button type="submit" class="hslhx-btn hslhx-btn-primary">إنشاء حساب</button>
    </form>

    <div class="hslhx-social-login">
        <p>أو التسجيل عبر</p>
        <div class="hslhx-social-buttons">
            <a href="#" class="hslhx-social-btn">G</a>
            <a href="#" class="hslhx-social-btn">f</a>
            <a href="#" class="hslhx-social-btn">t</a>
        </div>
    </div>

    <p class="hslhx-form-note">لديك حساب بالفعل؟ <a href="#" onclick="switchTab('login')">تسجيل الدخول</a></p>
</div>